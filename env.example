# Database Configuration (Railway will provide this)
DATABASE_URL=postgresql://postgres:password@postgres-xxxxx.railway.app:5432/probo

# Redis Configuration (Railway will provide this)
REDIS_URL=redis://redis-xxxxx.railway.app:6379

# Kafka Configuration
KAFKA_BROKERS=kafka:9092

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# Security (Change these in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-in-production

# Production Settings
NODE_ENV=production 